<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<!--.............................................................................................-->

    <style name="base_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="horizontal" parent="base_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="horizontalCenter" parent="base_style">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="vertical" parent="base_style">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="verticalCenter" parent="base_style">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="micro_text" parent="base_style">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="small_text" parent="base_style">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="medium_text" parent="base_style">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="large_text" parent="base_style">
        <item name="android:textSize">27sp</item>
    </style>

    <style name="dialogLinearEdit">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="elevation">6dp</item>
        <item name="background">@drawable/edit_text_field</item>
    </style>

</resources>